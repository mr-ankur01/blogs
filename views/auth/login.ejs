
	<%- include('../base/nav')%>


		<section class="ftco-section">
			<div class="container">
				<div class="row justify-content-center">
					<div class="col-md-7 col-lg-5">
						<div class="login-wrap p-4 p-md-5 border rounded bg-light mt-5">
							<div class="msg">
								<% if(message.error){ %>
									<div class="alert text-danger border-danger alert- alert-dismissible fade show" role="alert">
										<strong>
											<%= message.error %>
										</strong>
										<button type="button" class="btn-close" data-bs-dismiss="alert"
											aria-label="Close"></button>
									</div>
									<% } %>
							</div>
							<h3 class="text-center mb-5">Login</h3>
							<form action="/auth/login" method="POST" class="login-form">
								<div class="form-group ">
									<input type="email" class="form-control rounded-left" placeholder="Email"
										name="email" required>
								</div>
								<div class="form-group d-flex mt-3">
									<input type="password" class="form-control rounded-left" name="password"
										placeholder="Password" required>
								</div>
								<div class="form-group mt-4">
									<button type="submit"
										class="form-control btn btn-primary rounded submit px-3">Login</button>
								</div>
								<div class="form-group d-md-flex mt-4">
									<div class="w-50">
										<label class="checkbox-wrap checkbox-primary">Remember Me
											<input type="checkbox" checked>
											<span class="checkmark"></span>
										</label>
									</div>
									<div class="w-50 text-md-right">
										<a href="#">Forgot Password</a>
									</div>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</section>

		<%- include('../base/footer')%>
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
				integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
				crossorigin="anonymous"></script>

</body>

</html>